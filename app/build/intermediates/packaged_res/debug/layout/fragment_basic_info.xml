<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Basic Information Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:tint="@color/maroon_primary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary" />

                </LinearLayout>

                <!-- Profile Photo Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:padding="16dp"
                    android:background="@drawable/photo_upload_background">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp"
                        app:strokeColor="@color/maroon_primary"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/profileImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_person_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@color/cream_light" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Photo"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cameraButton"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Camera"
                            android:textColor="@color/maroon_primary"
                            app:strokeColor="@color/maroon_primary"
                            app:icon="@drawable/ic_camera"
                            app:iconTint="@color/maroon_primary"
                            app:iconGravity="start" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/galleryButton"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Gallery"
                            android:textColor="@color/maroon_primary"
                            app:strokeColor="@color/maroon_primary"
                            app:icon="@drawable/ic_gallery"
                            app:iconTint="@color/maroon_primary"
                            app:iconGravity="start" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/maroon_light"
                    android:alpha="0.3" />

                <!-- Name Information Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name Information"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/maroon_primary"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableTint="@color/maroon_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <!-- Full Name (Top Priority) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Full Name"
                    app:boxStrokeColor="@color/maroon_primary"
                    app:hintTextColor="@color/maroon_primary"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/maroon_primary"
                    app:helperText="Enter the complete full name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fullNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Name with Initials (Second) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Name with Initials"
                    app:boxStrokeColor="@color/maroon_primary"
                    app:hintTextColor="@color/maroon_primary"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/maroon_primary"
                    app:helperText="e.g., John A. Smith"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameWithInitialsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- ID Fields Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="NIC Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_badge"
                        app:startIconTint="@color/maroon_primary"
                        app:helperText="National ID"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nicNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Registration Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        app:helperText="Staff ID"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/registrationNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Identification Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identification &amp; Contact"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/maroon_primary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_email"
                    android:drawableTint="@color/maroon_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <!-- Email Address (Full Width) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Email Address"
                    app:boxStrokeColor="@color/maroon_primary"
                    app:hintTextColor="@color/maroon_primary"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/maroon_primary"
                    app:helperText="Official email for staff login"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Phone and Password Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Phone Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/maroon_primary"
                        app:helperText="Mobile number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Password"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/maroon_primary"
                        app:endIconMode="password_toggle"
                        app:helperText="Login password"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Personal Address (Full Width) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Personal Address"
                    app:boxStrokeColor="@color/maroon_primary"
                    app:hintTextColor="@color/maroon_primary"
                    app:startIconDrawable="@drawable/ic_home"
                    app:startIconTint="@color/maroon_primary"
                    app:helperText="Residential address"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/personalAddressEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress|textCapWords"
                        android:maxLines="3"
                        android:minLines="2"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView> 
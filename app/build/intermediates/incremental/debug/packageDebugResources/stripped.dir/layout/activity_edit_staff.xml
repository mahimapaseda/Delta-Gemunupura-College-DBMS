<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".EditStaffActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/maroon_primary"
            app:title="Edit Staff Member"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Photo Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Photo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="4dp"
                            app:strokeColor="@color/maroon_primary"
                            app:strokeWidth="2dp">

                            <ImageView
                                android:id="@+id/profileImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_person_placeholder"
                                android:scaleType="centerCrop"
                                android:background="@color/cream_light" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/cameraButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Take Photo"
                                android:textColor="@color/maroon_primary"
                                app:strokeColor="@color/maroon_primary"
                                app:icon="@drawable/ic_camera"
                                app:iconTint="@color/maroon_primary" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/galleryButton"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Choose from Gallery"
                                android:textColor="@color/maroon_primary"
                                app:strokeColor="@color/maroon_primary"
                                app:icon="@drawable/ic_gallery"
                                app:iconTint="@color/maroon_primary" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Basic Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Full Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fullNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Full Name"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fullNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Name with Initials -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameWithInitialsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Name with Initials"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nameWithInitialsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- NIC Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nicLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="NIC Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_badge"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nicInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Registration Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/registrationNumberLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Registration Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/registrationNumberInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textNoSuggestions" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Email Address"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emailInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Phone Number -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Phone Number"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/passwordLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Password"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="@color/maroon_primary"
                        app:endIconMode="password_toggle"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Personal Address -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addressLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Personal Address"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_home"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/addressInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPostalAddress|textCapWords"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Date of Birth -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dobLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Date of Birth"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dobInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gender -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/genderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Gender"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/genderDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Marital Status -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/maritalStatusLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Marital Status"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/maritalStatusDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Spouse Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spouseNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Spouse Name (if married)"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/spouseNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Emergency Contact Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emergencyContactNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Emergency Contact Name"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emergencyContactNameInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Emergency Contact Phone -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emergencyContactPhoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emergency Contact Phone"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_phone"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/emergencyContactPhoneInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Employment Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employment Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Staff Classification -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/staffClassificationLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Staff Classification"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/staffClassificationDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Appointed Subject -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/appointedSubjectLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Appointed Subject"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/appointedSubjectInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Date of First Appointment -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/firstAppointmentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Date of First Appointment"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/firstAppointmentInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Date of Appointment to School -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/schoolAppointmentLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Date of Appointment to School"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/schoolAppointmentInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Status -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/statusLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Status"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                        <AutoCompleteTextView
                            android:id="@+id/statusDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/maroon_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Previously Served Schools -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/previouslyServedSchoolsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Previously Served Schools"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/previouslyServedSchoolsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Educational Qualifications -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/educationalQualificationsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Educational Qualifications"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/educationalQualificationsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Professional Qualifications -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/professionalQualificationsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Professional Qualifications"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/professionalQualificationsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Subjects Taught -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/subjectsTaughtLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Subjects Taught"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/subjectsTaughtInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Grades Taught -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/gradesTaughtLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Grades Taught"
                        app:boxStrokeColor="@color/maroon_primary"
                        app:hintTextColor="@color/maroon_primary"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon_primary"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/gradesTaughtInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="3"
                            android:minLines="2" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Update Staff"
        android:textColor="@color/white"
        app:backgroundTint="@color/maroon_primary"
        app:icon="@drawable/ic_save"
        app:iconTint="@color/white"
        app:cornerRadius="28dp"
        android:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 